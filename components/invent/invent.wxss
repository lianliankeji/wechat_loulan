.invent-container {
  height: 100%;
  position: absolute;
  width: 100%;
  /* background-color: rgba(0, 0, 0, 0.5); */
  z-index: 11;
  top: 0;
  /* padding: 0 74rpx; */
  box-sizing: border-box;
}

.content {
  height: 920rpx;
  width: 602rpx;
  position: absolute;
  left: 50%;
  top: 46%;
  transform: translate(-50%, -50%);
}

.mask{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.content-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.section {
  position: absolute;
  bottom: 56rpx;
  left: 48rpx;
  right: 48rpx;
  top: 294rpx;
  background-color: #fff;
}

.section-title {
  text-align: center;
  padding-top: 40rpx;
  padding-bottom: 30rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(51, 51, 51, 1);
  line-height: 42px;
}

.bottom {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-top: 1px #ececec dashed;
  margin-top: 58rpx;
  box-sizing: border-box;
  padding-top: 56rpx;
}

.bottom .slogon {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.bottom .info {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(51, 51, 51, 1);
  line-height: 34rpx;
}

.pwd {
  text-align: center;
  font-size: 35px;
  font-family: PingFang-SC-Medium;
  color: rgba(253, 143, 47, 1);
  line-height: 49px;
  letter-spacing: 40rpx;
}

.qrcode {
  width: 160rpx;
  height: 160rpx;
  margin-right: 32rpx;
}

.prompt {
  position: absolute;
  bottom: -60rpx;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(253, 143, 47, 1);
  line-height: 40rpx;
}
