page {
  height: 100%;
}

.container {
  height: 100%;
  width: 100%;
  overflow: hidden;
  position: relative;
}

.container .bg {
  height: 100%;
  width: 100%;
}

.photo {
  position: absolute;
  left: 40rpx;
  top: 40rpx;
  z-index: 1;
  width: 52rpx;
  height: 42rpx;
}

.search {
  position: absolute;
  right: 40rpx;
  top: 40rpx;
  z-index: 1;
  width: 48rpx;
  height: 48rpx;
}

.praise-content {
  position: absolute;
  bottom: 430rpx;
  right: 40rpx;
  text-align: center;
  z-index: 1;
}

.praise {
  width: 52rpx;
  height: 48rpx;
}

.share-content {
  position: absolute;
  bottom: 260rpx;
  right: 40rpx;
  text-align: center;
  z-index: 1;
}

.share {
  width: 60rpx;
  height: 60rpx;
}

.shareButton{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  opacity: 0;
}

.total{
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(255, 255, 255, 1);
  line-height: 34rpx;
}

.bottom {
  height: 240rpx;
  width: 100%;
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  z-index: 1;
  padding: 28rpx 40rpx 0 40rpx;
  background-color: rgba(0, 0, 0, 0.15);
  align-items: flex-start;
}

.bottom .left {
  align-items: flex-start;
}

.bottom .score {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(bottom right, red, blue); /* 标准的语法 */
  background: -webkit-linear-gradient(bottom right, #fd8f2f, #fede6a);
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  border-radius: 4rpx;
  margin-right: 24rpx;
}

.bottom .score .num {
  font-size: 30rpx;
}

.bottom .score .unit {
  font-size: 20rpx;
}

.bottom .medium {
  width: 430rpx;
}

.bottom .medium .title {
  font-size: 34rpx;
  font-family: PingFang-SC-Bold;
  color: rgba(255, 255, 255, 1);
  line-height: 48rpx;
}

.bottom .medium .desc {
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  color: rgba(255, 255, 255, 1);
  line-height: 34rpx;
  height: 34px;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 10rpx;
}

.icon {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(253, 143, 47, 1);
  line-height: 34rpx;
  margin-top: 10rpx;
}

.icon-item {
  display: inline-block;
  margin-right: 20rpx;
}

.right {
  height: 100%;
  position: relative;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  position: absolute;
  right: 0;
  bottom: 40rpx;
}
