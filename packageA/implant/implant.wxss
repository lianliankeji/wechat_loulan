.top {
  height: 400rpx;
  background: rgba(0, 0, 0, 0.5);
  position: relative;
}

.top .img{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
}

.top .info {
  text-align: center;
  padding-top: 66rpx;
  color: #fff;
  position: relative;
  z-index: 2;
}

.info .during {
  font-size: 12px;
  font-family: PingFang-SC-Medium;
  color: rgba(255, 255, 255, 1);
  line-height: 17px;
  margin-top: 32rpx;
  margin-bottom: 26rpx;
}

.info .endtime {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(255, 37, 37, 1);
  line-height: 40rpx;
}

.nav {
  width: 100%;
  position: absolute;
  bottom: -40rpx;
  z-index: 3;
}

.nav-item {
  width: 180rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFang-SC-Bold;
  color: rgba(51, 51, 51, 1);
  background-color: #fff;
  border-radius: 4px;
  box-shadow: 1px 1px 5px 1px #999;
}

.content {
  margin-top: 80rpx;
  padding: 0 60rpx;
}

.section{
  margin-top: 40rpx;
}

.section-title {
  font-size: 15px;
  font-family: PingFang-SC-Medium;
  color: rgba(153, 153, 153, 1);
  line-height: 21px;
  margin-right: 40rpx;
  min-width: 120rpx;
}

.section-input{
  width: 472rpx;
  border-bottom: 1px #ececec solid;
}

.add {
  align-items: flex-start;
}

.content .addMovie {
  width: 472rpx;
  height: 280rpx;
  border-radius: 4px;
  text-align: center;
  line-height: 280rpx;
  border: 1px #ececec solid;
}

.content .video{
  width: 472rpx;
  height: 280rpx;
}

.content .icon {
  width: 58rpx;
  height: 58rpx;
}

.prompt {
  font-size: 12px;
  font-family: PingFang-SC-Medium;
  color: rgba(255, 37, 37, 1);
  line-height: 17px;
  margin-top: 26rpx;
}

.button {
  width: 670rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fd8f2f;
  color: #fff;
  font-size: 15px;
  font-family: PingFang-SC-Medium;
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
}
