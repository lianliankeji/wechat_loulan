.top {
  height: 400rpx;
  background: rgba(0, 0, 0, 0.5);
  position: relative;
}

.top .info {
  text-align: center;
  padding-top: 66rpx;
  color: #fff;
}

.info .during {
  font-size: 12px;
  font-family: PingFang-SC-Medium;
  color: rgba(255, 37, 37, 1);
  line-height: 17px;
  margin-top: 32rpx;
  margin-bottom: 26rpx;
}

.info .endtime {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(255, 255, 255, 1);
  line-height: 40rpx;
}

.nav {
  width: 100%;
  position: absolute;
  bottom: -40rpx;
}

.nav-item {
  width: 180rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFang-SC-Bold;
  color: rgba(51, 51, 51, 1);
  background-color: #fff;
  border-radius: 4px;
  box-shadow: 1px 1px 5px 1px #999;
}

.nav-item:nth-of-type(2) {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.nav-item-active {
  background-color: #fd8f2f;
  color: #fff;
}

.content {
  margin-top: 50rpx;
  padding: 0 52rpx;
  overflow: hidden;
}

.section {
  margin-top: 80rpx;
}

.section-title {
  font-size: 15px;
  font-family: PingFang-SC-Medium;
  color: rgba(153, 153, 153, 1);
  line-height: 21px;
  margin-right: 0rpx;
  min-width: 120rpx;
}

.section-input {
  border-bottom: 1px #ececec solid;
  margin-left: 10rpx;
  margin-right: 20rpx;
}

.change {
  min-width: 150rpx;
}

.content .icon {
  width: 74rpx;
  height: 58rpx;
}

.invoke {
  min-width: 150rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 4px;
  font-size: 12px;
  font-family: PingFang-SC-Medium;
  color: rgba(51, 51, 51, 1);
}

.button {
  width: 670rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fd8f2f;
  color: #fff;
  font-size: 15px;
  font-family: PingFang-SC-Medium;
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
}
